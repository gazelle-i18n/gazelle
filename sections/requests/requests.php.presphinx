			r.LastVote
			FROM requests AS r
			LEFT JOIN users_main AS u ON u.ID=r.UserID
			LEFT JOIN users_main AS filler ON filler.ID = FillerID
			LEFT JOIN requests_votes AS rv ON rv.RequestID=r.ID "
			.$ExtraJoin." "
			.$Where."
