// Build SQL query
$DB->query("SELECT
			SQL_CALC_FOUND_ROWS 
			r.ID,
			r.CategoryID,
			r.Title,
			r.Year,
			SUM(rv.Bounty) AS Bounty,
			COUNT(rv.UserID) AS Votes,
			r.FillerID,
